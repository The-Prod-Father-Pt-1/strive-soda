{{ 'what-is-hydration-soda.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color
-%}

<section class="what-is-hydration-soda" style="background-color: {{ bg_color }}; color: {{ text_color }};">
  <div class="container">
    <div class="wihs-content">

      {%- if heading != blank -%}
        <h2 class="wihs-heading">{{ heading }}</h2>
      {%- endif -%}

      {%- if description != blank -%}
        <div class="wihs-description">
          {{ description }}
        </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="wihs-benefits">
          {%- for block in section.blocks -%}
            <div class="wihs-benefit-card" {{ block.shopify_attributes }}>

              {%- comment -%} Hover Image Background (if provided) {%- endcomment -%}
              {%- if block.settings.hover_image != blank -%}
                <div class="wihs-hover-image" style="background-image: url('{{ block.settings.hover_image | image_url: width: 600 }}');"></div>
              {%- endif -%}

              {%- comment -%} Icon Display {%- endcomment -%}
              <div class="wihs-benefit-icon">
                {%- case block.settings.icon_svg -%}
                  {%- when 'droplet' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                    </svg>
                  {%- when 'honey' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2L3 7v10l9 5 9-5V7l-9-5zm0 2.18L18.82 8 12 11.82 5.18 8 12 4.18zM5 9.83l6 3.34v6.65l-6-3.34V9.83zm8 10v-6.65l6-3.34v6.65l-6 3.34z"/>
                    </svg>
                  {%- when 'sparkle' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 .587l3.668 7.568L24 9.748l-6.064 5.852 1.48 8.4L12 19.748 4.584 24l1.48-8.4L0 9.748l8.332-1.593z"/>
                    </svg>
                  {%- when 'target' -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <circle cx="12" cy="12" r="10"/>
                      <circle cx="12" cy="12" r="6"/>
                      <circle cx="12" cy="12" r="2"/>
                    </svg>
                  {%- else -%}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                    </svg>
                {%- endcase -%}
              </div>

              {%- if block.settings.title != blank -%}
                <h3 class="wihs-benefit-title">{{ block.settings.title }}</h3>
              {%- endif -%}

              {%- if block.settings.description != blank -%}
                <p class="wihs-benefit-description">{{ block.settings.description }}</p>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if cta_text != blank and cta_link != blank -%}
        <div class="wihs-cta">
          <a href="{{ cta_link }}" class="wihs-cta-button">
            {{ cta_text }}
          </a>
        </div>
      {%- endif -%}

    </div>
  </div>
</section>

{% schema %}
{
  "name": "What Is Hydration Soda?",
  "tag": "section",
  "class": "section-what-is-hydration-soda",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Is a Hydration Soda?"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Hydration soda is a better-for-you sparkling beverage that tastes like soda but goes beyond flavor.</p><p>Unlike traditional sodas loaded with sugar and empty calories, Strive Soda is designed to:</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Learn More About Hydration Soda"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "select",
          "id": "icon_svg",
          "label": "Icon",
          "options": [
            {
              "value": "droplet",
              "label": "Water Droplet (Hydration)"
            },
            {
              "value": "honey",
              "label": "Honeycomb (Natural Energy)"
            },
            {
              "value": "sparkle",
              "label": "Sparkle (Clean Ingredients)"
            },
            {
              "value": "target",
              "label": "Target (Lifestyle)"
            }
          ],
          "default": "droplet"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image (Optional)",
          "info": "Lifestyle image that appears on hover. Recommended: 600x600px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Benefit Title",
          "default": "Support Hydration"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Benefit Description",
          "default": "Infused with balanced electrolytes like sodium, potassium, and magnesium to help your body stay refreshed"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "What Is Hydration Soda?",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "droplet",
            "title": "Support Hydration",
            "description": "Infused with balanced electrolytes like sodium, potassium, and magnesium to help your body stay refreshed"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "honey",
            "title": "Deliver Natural Energy",
            "description": "Sweetened with organic wildflower honey for smooth, steady energy, plus antioxidants, trace vitamins, and minerals"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "sparkle",
            "title": "Keep Ingredients Clean",
            "description": "Free from artificial flavors, colors, and preservatives"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "target",
            "title": "Fit Your Lifestyle",
            "description": "Perfect for long days, travel, or anytime you want a flavorful, refreshing drink"
          }
        }
      ]
    }
  ]
}
{% endschema %}
