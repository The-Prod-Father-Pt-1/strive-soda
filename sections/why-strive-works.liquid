{{ 'why-strive-works.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
  assign bg_color = section.settings.bg_color
  assign text_color = section.settings.text_color
-%}

<section class="why-strive-works" style="background-color: {{ bg_color }}; color: {{ text_color }};">
  <div class="container">
    <div class="wsw-header">
      {%- if heading != blank -%}
        <h2 class="wsw-heading">{{ heading }}</h2>
      {%- endif -%}

      {%- if subheading != blank -%}
        <p class="wsw-subheading">{{ subheading }}</p>
      {%- endif -%}
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="wsw-benefits-grid">
        {%- for block in section.blocks -%}
          <div class="wsw-benefit-card" {{ block.shopify_attributes }}>

            {%- comment -%} Hover Image Background (if provided) {%- endcomment -%}
            {%- if block.settings.hover_image != blank -%}
              <div class="wsw-hover-image" style="background-image: url('{{ block.settings.hover_image | image_url: width: 600 }}');"></div>
            {%- endif -%}

            {%- comment -%} Icon Display {%- endcomment -%}
            <div class="wsw-icon">
              {%- case block.settings.icon_svg -%}
                {%- when 'droplet' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                  </svg>
                {%- when 'honey' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L3 7v10l9 5 9-5V7l-9-5zm0 2.18L18.82 8 12 11.82 5.18 8 12 4.18zM5 9.83l6 3.34v6.65l-6-3.34V9.83zm8 10v-6.65l6-3.34v6.65l-6 3.34z"/>
                  </svg>
                {%- when 'sparkle' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 .587l3.668 7.568L24 9.748l-6.064 5.852 1.48 8.4L12 19.748 4.584 24l1.48-8.4L0 9.748l8.332-1.593z"/>
                  </svg>
                {%- when 'leaf' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/>
                    <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/>
                  </svg>
                {%- when 'badge' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3.85 8.62a4 4 0 0 1 4.78-4.77 4 4 0 0 1 6.74 0 4 4 0 0 1 4.78 4.78 4 4 0 0 1 0 6.74 4 4 0 0 1-4.77 4.78 4 4 0 0 1-6.75 0 4 4 0 0 1-4.78-4.77 4 4 0 0 1 0-6.76Z"/>
                    <path d="m9 12 2 2 4-4"/>
                  </svg>
                {%- else -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                  </svg>
              {%- endcase -%}
            </div>

            {%- if block.settings.title != blank -%}
              <h3 class="wsw-title">{{ block.settings.title }}</h3>
            {%- endif -%}

            {%- if block.settings.description != blank -%}
              <p class="wsw-description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if cta_text != blank and cta_link != blank -%}
      <div class="wsw-cta-wrapper">
        <a href="{{ cta_link }}" class="wsw-cta-button">
          {{ cta_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Why Strive Works",
  "tag": "section",
  "class": "section-why-strive-works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Strive Works"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Refreshment you can feel good about"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Flavors"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#0ABAB5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "select",
          "id": "icon_svg",
          "label": "Icon",
          "options": [
            {
              "value": "droplet",
              "label": "Water Droplet (Hydration)"
            },
            {
              "value": "honey",
              "label": "Honeycomb (Natural Energy)"
            },
            {
              "value": "sparkle",
              "label": "Sparkle (Clean/Better-for-You)"
            },
            {
              "value": "leaf",
              "label": "Leaf (Natural Ingredients)"
            },
            {
              "value": "badge",
              "label": "Badge (Quality)"
            }
          ],
          "default": "droplet"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image (Optional)",
          "info": "Lifestyle image that appears on hover. Recommended: 600x600px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Benefit Title",
          "default": "Benefit Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Benefit Description",
          "default": "Benefit description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Strive Works",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "droplet",
            "title": "Hydration Redefined",
            "description": "Electrolytes for balance and refreshment"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "honey",
            "title": "Clean, Natural Sweetness",
            "description": "Organic honey instead of refined sugar"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "sparkle",
            "title": "Better-for-You",
            "description": "Low sugar, natural, indulgent flavor"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "icon_svg": "leaf",
            "title": "Feel Good Ingredients",
            "description": "Free from artificial flavors, colors, and preservatives"
          }
        }
      ]
    }
  ]
}
{% endschema %}
